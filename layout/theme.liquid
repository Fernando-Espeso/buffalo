            </li>
          </div>
        </div>
        


        <div class="sub-menu">
          <li><a class="BZ" href="/">BZ</a></li>
          {% assign custom_menu = linklists.custom.links %}
          {% for link in custom_menu %}
            {% assign is_active = false %}
            
            {% if link.url == request.path or link.url == '/' and request.path == '' %}
              {% assign is_active = true %}
