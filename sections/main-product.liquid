
<div class="head-product">
  {% if product.metafields.custom.logo != blank %}
    <div class="non">
      <img src="{{ product.metafields.custom.logo | img_url: '800x800' }}" alt="Imagen personalizada">
    </div>
  {% endif %}
{% if product.description != blank %}
  <div class="info-hero">
    {{ product.description }}
  </div>
{% endif %}
</div>
<div id="main-product" class="main" data-section-id="{{ section.id }}" data-product-section>
  <!--INFO-BUY-->
  <div class="buy-block">
    <div class="product-price">
      <div class="title-page">{{ product.title }}</div>
      {% comment %} <div class="sub-title"> {{ product.metafields.custom.title | metafield_tag }}</div> {% endcomment %}
      {% if product.available %}
        {% if product.price_varies %}
          <span class="price-inside">{{ product.price_min | money }}</span> – <span>{{ product.price_max | money }}</span>
        {% else %}
          {% if product.compare_at_price > product.price %}
            <s>{{ product.compare_at_price | money }}</s>
            <span class="disscount">{{ product.price | money }}</span>
          {% else %}
            <span class="title-price">{{ product.price | money }}</span>
          {% endif %}
        {% endif %}
      {% else %}
        <span>{{ product.price | money }}</span>
      {% endif %}
    </div>
    
    <!--PRODUCT INFO-->
    {%- assign productFormId = 'product-form-' | append: section.id -%}
    {%- form "product", product, id: productFormId, class: '' -%}
    <input type="hidden" name="product-id" value="{{- product.id -}}">
    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

    <div id="bag" class="bag
      {% if product.compare_at_price > product.price %}
      sale
      {% endif %}
      {% unless product.available %}
      sold
      {% endunless %}
    ">


 

      <!-- Variations Dropdown -->
      {% render 'product-variants', product: product, formID: productFormId %}

      <div class="variations">
        {% if variants > 1 %}
          <select id="Option-{{ forloop.index0 }}" name="options[{{ option.name }}]" class="product-variant-select">
            {%- for value in option.values -%}
              <option value="{{ value | escape }}"
                {% if option.selected_value == value %}selected{% endif %}>
                {{ value }}
              </option>
            {%- endfor -%}
          </select>
        {% endif %}

        <!-- Button Add To Bag -->
        {% liquid
          assign selectedVariant = product.selected_or_first_available_variant
          if selectedVariant.available
            assign addToCartText = 'ADD TO CART'
          else
            assign addToCartText = 'SOLD OUT'
          endif
        %}
        <button id="add-to-bag" {% unless product.available %}disabled{% endunless %} type="submit" name="add" data-add-to-cart>
          <span class="" data-add-to-cart-text>
            {{ addToCartText }}
          </span>
        </button>

       
        {% assign product_qty = 0 %}
        {% for variant in product.variants %}
          {% if variant.inventory_quantity > 0 %}
            {% assign product_qty = product_qty | plus: variant.inventory_quantity %}
          {% endif %}
        {% endfor %}

      
      </div>

    </div>
    {% endform %}
 
  </div>
  {% if product.metafields.custom.logo != blank %}
    <div class="custom-image">
      <img src="{{ product.metafields.custom.logo | img_url: '800x800' }}" alt="Imagen personalizada">
    </div>
  {% endif %}
  <div class="swiper-gallery">
    <div class="swiper-wrapper">
      {% if product.metafields.custom.cover != blank %}
        {% assign cover = product.metafields.custom.cover %}
        <div class="swiper-slide" data-slide-key="{{ cover.alt | default: 'cover' | handleize }}">
          <img
            id="cover-{{ product.id }}"
            class="lazy"
            src="{{ cover | image_url: width: 200 }}"
            data-src="{{ cover | image_url: width: 2048 }}"
            alt="{{ cover.alt | default: product.title | escape }}"
          />
        </div>
      {% endif %}
  
      {% for media in product.media %}
        {% case media.media_type %}
          {% when 'video' %}
            <div class="swiper-slide" data-slide-key="{{ media.alt | default: media.id | handleize }}">
              {{ media | video_tag: loop: true, autoplay: true, muted: true }}
            </div>
  
          {% when 'image' %}
            <div class="swiper-slide" data-slide-key="{{ media.alt | default: media.id | handleize }}">
              <img
                id="{{ media.alt | default: media.id | handleize }}"
                class="lazy"
                src="{{ media | product_img_url: 'thumb' }}"
                data-src="{{ media | product_img_url: 'master' }}"
                alt="{{ media.alt }}"
              />
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  
    <div class="swiper-pagination"></div>
    <div class="next"></div>
    <div class="prev"></div>
  </div>
  
    {% assign info = product.metafields.custom.description | default: '' %}
{% assign contributors = product.metafields.custom.contributors | default: '' %}
{% assign features = product.metafields.custom.features | default: '' %}
<div class="desplegable" id="info-product">
  <div class="description">
    {{ product.metafields.custom.description | metafield_tag }}
  </div>

  {% if features != blank %}
    <div class="contributors">
      <div class="title-cred">FEATURING</div>
      {{ product.metafields.custom.features | metafield_tag }}
    </div>
  {% endif %}
  
    {% if contributors != blank %}

      <div class="contributors">
        <div class="title-cred">CONTRIBUTING ARTISTS</div>
        {{ product.metafields.custom.contributors | metafield_tag }}
      </div>

    {% endif %}

   

    {% if info != blank %}
      <div class="details-product">{{ product.metafields.custom.info | metafield_tag }} </div>
    {% endif %}
</div>



</div>
{% assign related_products = product.metafields.custom.related.value %}
{% if related_products != blank %}
  <div class="related-products">
    <div class="related-title">YOU MIGHT ALSO LIKE</div>
    {% for related in related_products %}
      {% assign related_product = all_products[related.handle] %}
      {% if related_product %}
        <div class="product estandard">
        

          <a href="{{ related_product.url }}">
            {% if related_product.featured_image %}
              <img src="{{ related_product.featured_image | img_url: 'master' }}" alt="{{ related_product.title }}">
            {% endif %}
          </a>
          <div class="product-title title-thang">
            <p>{{ related_product.title }}</p>
            <div class="product-price-white">      {% if related_product.price %}
              <p>{{ related_product.price | money }}</p>
            {% endif %}</div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
{% endif %}

<script>
$(document).ready(function () {
  var swiper = new Swiper('.swiper-gallery', {
    loop: true,
    speed:800,
    navigation: {
      nextEl: '.next',
      prevEl: '.prev',
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
      renderBullet: function (index, className) {
        return `<span class="${className}"></span>`;
      }
    },
    keyboard: {
      enabled: true,        // activa el control por teclado
      onlyInViewport: true, // solo cuando el swiper está visible en pantalla
    }
  });
});
</script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const chooseLabel = document.querySelector(".choose");
    const fieldset = document.querySelector(".variant-fieldset");

    chooseLabel.addEventListener("click", function () {
      // Toggle display
      if (fieldset.style.display === "none" || fieldset.style.display === "") {
        fieldset.style.display = "flex";
      } else {
        fieldset.style.display = "none";
      }
    });

    // Escuchar cambios en los radios
    const radios = fieldset.querySelectorAll("input[type='radio']");
    radios.forEach(function (radio) {
      radio.addEventListener("change", function () {
        // Ocultar el fieldset
        fieldset.style.display = "none";
        // Cambiar el texto del label "COVER OPTION"
        chooseLabel.textContent = radio.value;
      });
    });
  });
</script> 
<script>
  document.addEventListener("DOMContentLoaded", function () {
    // 1) Inicializa Swiper (ajusta opciones a tus necesidades)
    const galleryEl = document.querySelector('.swiper-gallery');
    const swiper = new Swiper(galleryEl, {
      loop: false,
      slidesPerView: 1,
      pagination: {
        el: galleryEl.querySelector('.swiper-pagination'),
        clickable: true
      },
      navigation: {
        nextEl: galleryEl.querySelector('.next'),
        prevEl: galleryEl.querySelector('.prev')
      }
    });
  
    // 2) Indexa slides por su data-slide-key
    const slides = Array.from(galleryEl.querySelectorAll('.swiper-slide'));
    const indexByKey = new Map();
    slides.forEach((slide, idx) => {
      const key = slide.dataset.slideKey; // p.ej. "azul-marino"
      if (key && !indexByKey.has(key)) {
        indexByKey.set(key, idx);
      }
    });
  
    // 3) Escucha cambios en radios que tengan href="#clave"
    const radios = document.querySelectorAll('input[type="radio"][href^="#"]');
    radios.forEach(radio => {
      radio.addEventListener('change', function () {
        const href = this.getAttribute('href');
        if (!href) return;
        const key = href.replace(/^#/, ''); // "azul-marino"
  
        // Si tenemos slide con esa clave → saltar a ella
        if (indexByKey.has(key)) {
          const slideIndex = indexByKey.get(key);
          swiper.slideTo(slideIndex); // Swiper usa índice base 0 (considera loop=false)
        } else {
          // Fallback: por si no hay clave, intenta scroll al elemento con ese id
          const el = document.getElementById(key);
          if (el) {
            el.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        }
      });
    });
  });
  </script>
  
