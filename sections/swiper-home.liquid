<div class="swiper-home">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide">
        <img src="{{ block.settings.image | img_url: '1024x1024' }}" alt="{{ block.settings.alt_text }}">
      </div>
    {% endfor %}
  </div>
      <div class="swiper-pagination"></div>
    <div class="next"></div>
    <div class="prev"></div>
</div>

{% schema %}
{
  "name": "slider",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        },
        {
          "type": "text",
          "label": "Image Alt Text",
          "id": "alt_text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider",
      "category": "Custom"
    }
  ]
}

{% endschema %}
<script>
    $(document).ready(function () {
        var swiper = new Swiper('.swiper-home', {
          loop: true,
          slidesPerView: 2,
          spaceBetween: 0,
                    navigation: {
            nextEl: '.next',
            prevEl: '.prev',
            },
            pagination: {
            el: '.swiper-pagination',
            clickable: true,
            renderBullet: function (index, className) {
                return `<span class="${className}"></span>`;
            }
            },
            keyboard: {
            enabled: true,        // activa el control por teclado
            onlyInViewport: true, // solo cuando el swiper está visible en pantalla
            },
          breakpoints: {
            // Cuando la pantalla es >= 0px (móviles)
            0: {
              slidesPerView: 2,
            },
            // Cuando la pantalla es >= 768px (tablets y escritorios)
            768: {
              slidesPerView: 1,
            }
          }
        });
});
</script>