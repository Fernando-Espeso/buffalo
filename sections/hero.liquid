        { "type": "image_picker", "id": "custom_image", "label": "Custom Product Image" },
        { "type": "checkbox", "id": "fullscreen", "label": "Full Screen Mode" }
      ]
    },
    {
      "type": "two_products",
      "name": "Two Products",
      "settings": [
        { "type": "product", "id": "product_1", "label": "First Product" },
        { "type": "product", "id": "product_2", "label": "Second Product" },
        { "type": "image_picker", "id": "hover_image_1", "label": "First Product Hover" },
        { "type": "url", "id": "video_url_1", "label": "First Product Video URL" },
        { "type": "image_picker", "id": "hover_image_2", "label": "Second Product Hover" },
        { "type": "url", "id": "video_url_2", "label": "Second Product Video URL" }
      ]
    },
    {
      "type": "six_products_with_bg",
      "name": "Multiple Products",
      "settings": [
        { "type": "image_picker", "id": "bg_image", "label": "Background Image" },
        { "type": "product", "id": "product_1", "label": "Product 1" },
        { "type": "product", "id": "product_2", "label": "Product 2" },
        { "type": "product", "id": "product_3", "label": "Product 3" },
        { "type": "product", "id": "product_4", "label": "Product 4" },
        { "type": "product", "id": "product_5", "label": "Product 5" },
        { "type": "product", "id": "product_6", "label": "Product 6" }
      ]
    },
    {
      "type": "articles",
      "name": "Articles Block",
      "settings": [
        { "type": "article", "id": "article_1", "label": "Article 1" },
        { "type": "image_picker", "id": "article_1_image", "label": "Article 1 Image" },
        { "type": "url", "id": "article_1_media_hover", "label": "Article 1 Hover Video/Image URL" },
        { "type": "textarea", "id": "article_1_custom_text", "label": "Article 1 Custom Text" },
        { "type": "article", "id": "article_2", "label": "Article 2" },
        { "type": "image_picker", "id": "custom_image", "label": "Custom Product Image" },
        { "type": "url", "id": "article_2_media_hover", "label": "Article 2 Hover Video/Image URL" },
        { "type": "textarea", "id": "article_2_custom_text", "label": "Article 2 Custom Text" }
      ]
    },

    { 
      "type": "articles_grid",
      "name": "Articles Grid",
      "settings": [
        { "type": "checkbox", "id": "half", "label": "Half (2 columnas)" },
        { "type": "checkbox", "id": "third", "label": "Third (3 columnas)" }
      ]
    },
    { 
      "type": "article_card",
      "name": "Article Card",
      "settings": [
        { "type": "article", "id": "article", "label": "Artículo" },
        { "type": "image_picker", "id": "custom_image", "label": "Imagen personalizada (opcional)" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home",
      "blocks": [
        { "type": "hero" },
        { "type": "single_product" },
        { "type": "two_products" },
        { "type": "articles" },
        { "type": "articles_grid" },
        { "type": "article_card" },
        { "type": "article_card" },
        { "type": "article_card" }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
.articles-grid { width: 100%; }
.articles-grid__inner { display: grid; gap: 2rem; }
.articles-grid.grid-half .articles-grid__inner { grid-template-columns: repeat(2, minmax(0, 1fr)); }
.articles-grid.grid-third .articles-grid__inner { grid-template-columns: repeat(3, minmax(0, 1fr)); }
.article-card__media img { width: 100%; height: auto; display: block; }
.article-card__title { margin-top: .75rem; }
{% endstylesheet %}
