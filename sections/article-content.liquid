<div class="article-content">
  {% for block in section.blocks %}
    {% case block.type %}

      {% when "gallery" %}
        <div class="gallery">
          {% for image in block.settings.images %}
            <img src="{{ image | image_url: '800x' }}" alt="{{ image.alt | escape }}">
          {% endfor %}
        </div>

      {% when "title" %}
        <h2 class="title">{{ block.settings.text }}</h2>

      {% when "credits" %}
        <p class="credits">{{ block.settings.text }}</p>

      {% when "info" %}
        <div class="info">{{ block.settings.text }}</div>

      {% when "extra" %}
        <div class="extra">{{ block.settings.text }}</div>

    {% endcase %}
  {% endfor %}
</div>
{% schema %}
{
  "name": "Article Content",
  "max_blocks": 20,
  "blocks": [
    {
      "type": "gallery",
      "name": "Gallery",
      "settings": [
        {
          "type": "image_picker",
          "id": "images",
          "label": "Images",
          "info": "Selecciona una imagen",
        }
      ]
    },
    {
      "type": "title",
      "name": "Título",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Título"
        }
      ]
    },
    {
      "type": "credits",
      "name": "Créditos",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Créditos"
        }
      ]
    },
    {
      "type": "info",
      "name": "Información",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Información adicional"
        }
      ]
    },
    {
      "type": "extra",
      "name": "Texto extra",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Texto libre"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Article Content",
      "blocks": [
        { "type": "gallery" },
        { "type": "title" },
        { "type": "credits" },
        { "type": "info" },
        { "type": "extra" }
      ]
    }
  ]
}
{% endschema %}
