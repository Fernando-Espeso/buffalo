{% schema %}
{
  "name": "Products",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        }},
        {
          "type": "checkbox",
          "id": "half",
          "label": "Half"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Products"
    }
  ]
}
{% endschema %}
<div class="products" id="products">
  {% for block in section.blocks %}
    {% assign product = block.settings.product %}
    {% if product %}
      {% assign variant = product.variants.first %}
  
      <div class="product {% if block.settings.half %}half{% endif %}">
        <div class="title-thang">
          <div>{{ product.title }}</div>
  
          {% if variant.compare_at_price > variant.price %}
            <p>
              <span class="price-original" style="text-decoration: line-through; color: #999;">
                {{ variant.compare_at_price | money }}
              </span>
              <span class="price-sale" style="color: red; font-weight: bold;">
                {{ variant.price | money }}
              </span>
            </p>
          {% else %}
            <p>{{ variant.price | money }}</p>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>


  